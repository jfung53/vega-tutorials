{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "A contour plot of residential segregation in NYC by borough.",
  "width": 500,
  "height": 400,
  "padding": 5,
  "autosize": "pad",

  "config": {
    "axis": 
    {
      "labelFont": {"signal": "fontMain"},
      "labelFontWeight": 300,
      "labelColor": "darkslategrey",
      "titleFont": {"signal": "fontMain"},
      "titleColor": "dimgrey",
      "titleFontWeight": 400
    },
    "legend": {"labelFont": {"signal": "fontMain"}}
  },

  "signals": [
    {
      "name": "fontMain", "value": "Source Serif 4"
    }
  ],

  "data": [
    {
      "name": "source",
      "url": "https://raw.githubusercontent.com/jfung53/vega-tutorials/refs/heads/main/data/dissimilarity_scores.json"
    },
    {
      "name": "density",
      "source": "source",
      "transform": [
        {
          "type": "kde2d",
          "groupby": ["borough"],
          "size": [{"signal": "width"}, {"signal": "height"}],
          "x": {"expr": "scale('x', datum.income)"},
          "y": {"expr": "scale('y', datum.ls)"}
        }
      ]
    },
    {
      "name": "contours",
      "source": "density",
      "transform": [
        {
          "type": "isocontour",
          "field": "grid",
          "resolve": "shared",
          "levels": 12
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {"data": "source", "field": "income"},
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": false,
      "domain": {"data": "source", "field": "ls"},
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source", "field": "borough"
      },
      "range": {"scheme": "observable10"}
    }
  ],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 5,
      "tickColor": "gainsboro",
      "title": "Median household income",
      "titlePadding": 10,
      "gridColor": "gainsboro"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "tickColor": "gainsboro",
      "title": "Segregation score",
      "titlePadding": 16,
      "gridColor": "gainsboro"
    }
  ],

  "legends": [
    {"fill": "color", "symbolType": "circle"}
  ],

  "marks": [
    {
      "name": "marks",
      "type": "symbol",
      "from": {"data": "source"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "income"},
          "y": {"scale": "y", "field": "ls"},
          "size": {"value": 10},
          "fill": {"scale": "color", "field": "borough"}
        }
      }
    },
    {
      "type": "image",
      "from": {"data": "density"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "y": {"value": 0},
          "width": {"signal": "width"},
          "height": {"signal": "height"},
          "aspect": {"value": false}
        }
      },
      "transform": [
        {
          "type": "heatmap",
          "field": "datum.grid",
          "resolve": "shared",
          "color": {"expr": "scale('color', datum.datum.borough)"}
        }
      ]
    },
    {
      "type": "path",
      "clip": true,
      "from": {"data": "contours"},
      "encode": {
        "enter": {
          "strokeWidth": {"value": 1},
          "strokeOpacity": {"value": 1},
          "stroke": {"scale": "color", "field": "borough"}
        }
      },
      "transform": [
        { "type": "geopath", "field": "datum.contour" }
      ]
    }
  ]
}
